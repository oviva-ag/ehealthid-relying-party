.combobox {
  position: relative;
  width: 100%;
}

.combobox-trigger {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: var(--height-input);
  padding: 0 var(--spacing-16);
  padding-right: var(--spacing-32);
  border: 1px solid var(--color-text-2);
  border-radius: var(--border-radius-input);
  background: var(--color-neutral-1);
  cursor: pointer;
}

.combobox-trigger svg {
  position: absolute;
  right: var(--spacing-8);
  top: 50%;
  transform: translateY(-50%);
  pointer-events: none;
}

.combobox-text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.combobox.open .combobox-trigger,
.combobox-trigger:focus {
  outline: none;
  border: 2px solid var(--color-text-1);
  padding: 0 calc(var(--spacing-16) - 1px);
  padding-right: calc(var(--spacing-40) - 1px);
}

.combobox.open .combobox-trigger svg {
  transform: translateY(-50%) scaleY(-1);
}

.combobox-dropdown {
  display: none;
  position: absolute;
  bottom: 100%;
  left: 0;
  right: 0;
  max-height: 200px;
  margin-bottom: var(--spacing-8);
  background: var(--color-neutral-1);
  border: 1px solid rgba(0, 0, 0, 0.05);
  border-radius: var(--border-radius-input);
  box-shadow: 0 6px 15px 0 rgba(0, 0, 0, 0.05);
  z-index: 1000;
  overflow-y: auto;
  overscroll: contain;
}

.combobox.open .combobox-dropdown {
  display: block;
}

.combobox-search-input {
  position: absolute;
  top: 0;
  left: 0;
  right: var(--spacing-40);
  width: 100%;
  height: 100%;
  padding: 0 var(--spacing-16);
  padding-right: var(--spacing-32);
  border: none;
  background: transparent;
  font-size: var(--font-size-body);
  font-weight: var(--font-weight-normal);
  line-height: var(--line-height-default);
  letter-spacing: var(--letter-spacing-body);
  color: var(--color-text-1);
  outline: none;
}

.combobox-search-input::placeholder {
  color: var(--color-text-2);
}

.combobox-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--spacing-14) var(--spacing-16);
  border-bottom: 1px solid var(--color-neutral-2);
  cursor: pointer;
}

.combobox-option:hover {
  background-color: var(--color-neutral-2);
}

.combobox-option:focus {
  outline: none;
  background-color: var(--color-neutral-2);
}

.combobox-option:last-child {
  border-bottom: none;
}

.combobox-option svg {
  opacity: 0;
  flex-shrink: 0;
}

.combobox-option.selected svg {
  opacity: 1;
}

.combobox-option.hidden {
  display: none;
}

.combobox-empty-state {
  color: var(--color-text-2);
  padding: var(--spacing-14) var(--spacing-16);
}

@keyframes prevent-input-autoscroll {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

.input-focus-no-scroll {
  animation: prevent-input-autoscroll 0.01s;
}
